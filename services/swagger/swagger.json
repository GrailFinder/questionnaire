{
    "swagger": "2.0",
    "info": {
      "version": "0.0.1",
      "title": "questmaker",
      "description": "Swagger spec for documenting the questionnarie"
    },
    "host": "192.168.99.100",
    "schemes": [
      "http"
    ],
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "paths": {
      "/ping": {
        "get": {
          "description": "Returns a sanity check",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Will return 'pong!'"
            }
          }
        }
      },
      "/inquiries": {
        "get": {
          "description": "Returns all inquiries",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "inquiry object"
            }
          }
        },
        "post": {
          "description": "Adds a new Inquiry",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "Inquiry",
              "in": "body",
              "description": "Inquiry to add",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Inquiry"
              }
            }
          ],
          "security": [
            {
              "Bearer": []
            }
          ],
          "responses": {
            "200": {
              "description": "Inquiry added"
            }
          }
        }
      }
    },
    "definitions": {
      "Inquiry": {
        "type": "object",
        "required": [
          "title",
          "questions",
          "description"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "questions": {
            "type": "object"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
  